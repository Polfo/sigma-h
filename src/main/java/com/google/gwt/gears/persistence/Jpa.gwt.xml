<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='jdbc'>
    <!-- Inherit the core Web Toolkit stuff.                        -->
    <inherits name='com.google.gwt.user.User'/>


    <!-- Inherit GEARs and our Jdbc wrapper, this implementation is built on both -->
    <inherits name="com.google.gwt.gears.Gears"/>
    <inherits name="com.google.gwt.gears.jdbc.Jdbc"/>

    <!-- Inherit the sources for the JPA annotations -->
    <inherits name="com.google.gwt.gears.persistence.emul.Emulation"/>


    <generate-with class="com.google.gwt.gears.persistence.rebind.CrudGenerator">
        <when-type-assignable class="com.google.gwt.gears.persistence.client.Crud"/>
    </generate-with>

    <generate-with class="com.google.gwt.gears.persistence.rebind.EmfGenerator">
        <when-type-assignable class="javax.persistence.EntityManagerFactory"/>
    </generate-with>


    <source path='client'/>
</module>
