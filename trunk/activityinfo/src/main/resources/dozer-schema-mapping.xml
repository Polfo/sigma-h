<?xml version="1.0" encoding="UTF-8"?>

<mappings xmlns="http://dozer.sourceforge.net" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://dozer.sourceforge.net beanmapping.xsd ">

	<mapping wildcard="true">
		<class-a>org.activityinfo.server.domain.UserDatabase</class-a>
		<class-b>org.activityinfo.shared.dto.UserDatabaseDTO</class-b>
	
		<field>
			<a>owner.name</a>
			<b>ownerName</b>			
		</field>
		
		<field>
			<a>owner.email</a>
			<b>ownerEmail</b>
		</field>	
	</mapping>

    <mapping wildcard="true">

		<class-a>org.activityinfo.server.domain.Activity</class-a>
		<class-b>org.activityinfo.shared.dto.ActivityModel</class-b>

        <field-exclude>
            <a>database</a>
            <b>database</b>
        </field-exclude>

        <field>
            <a>locationType.id</a>
            <b>locationTypeId</b>
        </field>

    </mapping>

	<mapping wildcard="true">
		
		<class-a>org.activityinfo.server.domain.UserPermission</class-a>
		<class-b>org.activityinfo.shared.dto.UserModel</class-b>
		
		<field>
			<a>user.name</a>
			<b>name</b>
		</field>
		
		<field>
			<a>user.email</a>
			<b>email</b>
		</field>
	</mapping>
	
	<mapping wildcard="true">
		
		<class-a>org.activityinfo.server.domain.Indicator</class-a>
		<class-b>org.activityinfo.shared.dto.IndicatorModel</class-b>
		
		<field type="one-way">
			<a>id</a>
			<b>id</b>
		</field>
	
	</mapping>
	

</mappings>