            <!--<phase>generate-test-sources</phase>-->
            <!--<configuration>-->
            <!--<tasks>-->
            <!---->
            <!--</tasks>-->
            <!--</configuration>-->
            <!--<goals>-->
            <!--<goal>run</goal>-->
            <!--</goals>-->
            <!--</execution>-->
            <!--</executions>-->
            <!--</plugin>-->

            <!-- Include client and emulation sources in the jar -->

        </plugins>
    </build>
</project>

